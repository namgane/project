@model IEnumerable<TravelWeb.Models.Booking>
@{
    ViewData["Title"] = "Yêu Cầu Đặt Phòng";
}

<div class="container mt-4">
    @if (ViewBag.IsAdmin == true)
    {
        <h2><i class="bi bi-shield-check"></i> Quản Lý Tất Cả Đơn Đặt Phòng (Admin)</h2>
    }
    else
    {
        <h2><i class="bi bi-envelope"></i> Yêu Cầu Đặt Phòng</h2>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-x-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Chưa có yêu cầu đặt phòng nào.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Khách Hàng</th>
                        @if (ViewBag.IsAdmin == true)
                        {
                            <th>Khách Sạn</th>
                        }
                        <th>Ngày Nhận Phòng</th>
                        <th>Ngày Trả Phòng</th>
                        <th>Số Phòng</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        var soNgay = (b.CheckOutDate - b.CheckInDate).Days;
                        var tongTien = soNgay * b.SoLuongPhong * b.Hotel.GiaMoiDem;

                        <tr>
                            <td>@b.User.Username</td>
                            @if (ViewBag.IsAdmin == true)
                            {
                                <td>@b.Hotel.TenKhachSan</td>
                            }
                            <td>@b.CheckInDate.ToString("dd/MM/yyyy")</td>
                            <td>@b.CheckOutDate.ToString("dd/MM/yyyy")</td>
                            <td>@b.SoLuongPhong</td>
                            <td>
                                <strong class="text-success">@tongTien.ToString("C")</strong>
                                <br />
                                <small class="text-muted">(@soNgay đêm)</small>
                            </td>
                            <td>
                                @if (b.TrangThai == "Chờ Xác Nhận")
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-hourglass-split"></i> @b.TrangThai
                                    </span>
                                }
                                else if (b.TrangThai == "Đã Xác Nhận")
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> @b.TrangThai
                                    </span>
                                }
                                else if (b.TrangThai == "Đã Hoàn Thành")
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-check-all"></i> @b.TrangThai
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> @b.TrangThai
                                    </span>
                                }
                            </td>
                            <td>
                                @if (b.TrangThai == "Chờ Xác Nhận")
                                {
                                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@b.Id" />
                                        <input type="hidden" name="status" value="Đã Xác Nhận" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check-lg"></i> Xác Nhận
                                        </button>
                                    </form>
                                    <form asp-action="UpdateStatus" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@b.Id" />
                                        <input type="hidden" name="status" value="Đã Hủy" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-x-lg"></i> Từ Chối
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Đã xử lý</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>