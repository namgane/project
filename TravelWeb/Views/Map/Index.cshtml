@{
    ViewData["Title"] = "Maps " + ViewBag.City;
    var city = ViewBag.City;
    var lat = ViewBag.Lat;
    var lng = ViewBag.Lng;
}

@using System.Text.Json

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <!-- Leaflet CSS + JS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fafafa;
            text-align: center;
        }

        #map {
            width: 90%;
            height: 600px;
            margin: 30px auto;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            cursor: crosshair;
        }

        .back-btn {
            background: #3949ab;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 15px;
        }

            .back-btn:hover {
                background: #1a237e;
            }

        .leaflet-popup-content-wrapper {
            padding: 0;
        }

        .leaflet-popup-content {
            margin: 0;
            min-width: 350px;
        }

        .street-view-container {
            width: 100%;
            height: 250px;
        }

            .street-view-container iframe {
                width: 100%;
                height: 100%;
                border: 0;
            }

        .popup-header {
            background: #3949ab;
            color: white;
            padding: 8px;
            font-weight: bold;
        }

        .alert {
            width: 90%;
            margin: 15px auto;
            padding: 12px;
            border-radius: 8px;
            font-size: 16px;
        }

        .alert-success {
            background-color: #e8f5e9;
            color: #2e7d32;
            border: 1px solid #81c784;
        }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: 1px solid #ef9a9a;
        }
    </style>
</head>

<body>
    <h2 class="text-center mt-3">Bản đồ @city - Click để thêm Virtual Tour 👁️</h2>

    <!-- ✅ Hiển thị thông báo thành công/lỗi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <div id="map"></div>

    <button class="back-btn" onclick="window.location.href='/Home/Index'">← Quay lại</button>

    <script>
        // ====== Nhận dữ liệu từ Controller ======
        const lat = parseFloat("@lat");
        const lng = parseFloat("@lng");
        const city = "@city";

        const locations = @Html.Raw(JsonSerializer.Serialize(ViewBag.Locations ?? new List<object>()));
        const virtualTours = @Html.Raw(JsonSerializer.Serialize(ViewBag.VirtualTours ?? new List<object>()));

        // ====== Khởi tạo bản đồ ======
        const map = L.map('map').setView([lat, lng], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; OpenStreetMap'
        }).addTo(map);

        // Marker trung tâm thành phố
        L.marker([lat, lng])
            .addTo(map)
            .bindPopup(`<b>${city}</b><br>Vị trí trung tâm`)
            .openPopup();

        // ====== Icon cho loại địa điểm (icon nhỏ gọn) ======
        function getIcon(type) {
            let iconUrl;
            switch (type) {
                case 1:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/139/139899.png"; // hotel
                    break;
                case 2:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/922/922699.png"; // coffee
                    break;
                case 3:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/1046/1046784.png"; // food
                    break;
                case 4:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/481/481817.png"; // park
                    break;
                default:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/252/252025.png";
            }

            return L.icon({
                iconUrl: iconUrl,
                iconSize: [24, 24],  // 👈 icon nhỏ gọn lại
                iconAnchor: [12, 24],
                popupAnchor: [0, -20]
            });
        }

        // ====== Icon con mắt cho Virtual Tour (nhỏ hơn) ======
        function getEyeIcon() {
            return L.icon({
                iconUrl: "https://cdn-icons-png.flaticon.com/512/159/159604.png",
                iconSize: [24, 24],  // 👈 nhỏ lại
                iconAnchor: [12, 24],
                popupAnchor: [0, -20]
            });
        }

        // ====== Tên loại địa điểm ======
        function getTypeName(type) {
            switch (type) {
                case 1: return "Khách sạn 🏨";
                case 2: return "Cafe ☕";
                case 3: return "Quán ăn 🍜";
                case 4: return "Công viên 🌳";
                default: return "Khác";
            }
        }

        // ====== Hiển thị marker địa điểm ======
        if (locations && locations.length > 0) {
            locations.forEach(loc => {
                const icon = getIcon(loc.Type);
                L.marker([loc.Lat, loc.Lng], { icon })
                    .addTo(map)
                    .bindPopup(`
                        <b>${loc.Ten}</b><br>
                        ${loc.MoTa}<br>
                        <i>Loại: ${getTypeName(loc.Type)}</i>
                    `);
            });
        }

        // ====== Hiển thị Virtual Tour ======
        if (virtualTours && virtualTours.length > 0) {
            virtualTours.forEach(vt => {
                const coords = vt.LocationName.split(',');
                if (coords.length === 2) {
                    const vtLat = parseFloat(coords[0]);
                    const vtLng = parseFloat(coords[1]);
                    const eyeIcon = getEyeIcon();

                    const marker = L.marker([vtLat, vtLng], { icon: eyeIcon }).addTo(map);
                    const popupContent = `
                        <div class="popup-header">👁️ Virtual Tour</div>
                        <div class="street-view-container">
                            <iframe src="${vt.StreetViewLink}" allowfullscreen loading="lazy"></iframe>
                        </div>
                    `;
                    marker.bindPopup(popupContent, { maxWidth: 350, className: 'street-view-popup' });
                }
            });
        }

        // ====== Click để thêm Virtual Tour ======
        map.on('click', function (e) {
            const clickedLat = e.latlng.lat;
            const clickedLng = e.latlng.lng;
            window.location.href = `/VirtualTours/Create?lat=${clickedLat}&lng=${clickedLng}`;
        });
    </script>
</body>
</html>
