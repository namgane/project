@{
    ViewData["Title"] = "Maps " + ViewBag.City;
    var city = ViewBag.City;
    var lat = ViewBag.Lat;
    var lng = ViewBag.Lng;
    // Lấy toàn bộ ảnh lễ hội để dùng làm nền phía sau bản đồ
    var festivalImages = TravelWeb.Models.FestivalData.GetAll()
        .SelectMany(f => (f.ImageUrls != null && f.ImageUrls.Count > 0) ? f.ImageUrls : new List<string> { f.ImageUrl })
        .Where(url => !string.IsNullOrWhiteSpace(url))
        .Distinct()
        .ToList();
}

@using System.Text.Json

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <!-- Leaflet CSS + JS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fafafa;
            text-align: center;
        }

        /* ====== Map hero wrapper with subtle festival collage background ====== */
        .map-hero {
            position: relative;
            width: 90%;
            margin: 30px auto;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,0,0,0.15);
            background: #0e1116;
        }

        .map-bg-layer {
            position: absolute;
            inset: 0;
            z-index: 0;
        }

        .map-bg-grid {
            position: absolute;
            inset: -10%; /* bleed so edges are covered */
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            grid-auto-rows: 120px;
            gap: 8px;
            filter: blur(6px) saturate(110%);
            opacity: 0.18; /* subtle */
            transform: scale(1.05);
            animation: slowPan 30s linear infinite alternate;
        }

        .map-bg-item {
            background-size: cover;
            background-position: center;
            border-radius: 8px;
        }

        .map-bg-overlay {
            position: absolute;
            inset: 0;
            background: radial-gradient(ellipse at center, rgba(0,0,0,0.25) 0%, rgba(0,0,0,0.45) 60%, rgba(0,0,0,0.6) 100%);
            z-index: 1;
            pointer-events: none;
        }

       /*  keyframes slowPan {
            from { transform: scale(1.05) translateY(0px); }
            to { transform: scale(1.08) translateY(-10px); }
        } */

        #map {
            position: relative;
            z-index: 2;
            width: 100%;
            height: 600px;
            border-radius: 16px;
        }

        .back-btn {
            background: #3949ab;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 15px;
        }

            .back-btn:hover {
                background: #1a237e;
            }
    </style>
</head>

<body>
    <h2 class="text-center mt-3">Bản đồ @city</h2>

    <div class="map-hero">
        <div class="map-bg-layer">
            <div class="map-bg-grid" id="mapBgGrid"></div>
            <div class="map-bg-overlay"></div>
        </div>
        <div id="map"></div>
    </div>

    <button class="back-btn" onclick="window.location.href='/Home/Index'">← Quay lại</button>
    <button class="back-btn" style="background:#2e7d32;" onclick="enableAddMode()">➕ Thêm địa điểm</button>

    <!-- Form nhập địa điểm -->
    <div id="addForm" style="display:none; background:#fff; padding:15px; border-radius:8px; box-shadow:0 2px 6px rgba(0,0,0,0.2);">
        <label>Tên địa điểm:</label><br>
        <input type="text" id="ten" class="form-control mb-2">

        <label>Hình ảnh:</label><br>
        <input type="file" id="imageFile" accept="image/*" class="form-control mb-2">

        <label>Loại:</label><br>
        <select id="loai" class="form-control mb-3">
            <option value="1">Khách sạn</option>
            <option value="2">Quán cà phê</option>
            <option value="3">Nhà hàng</option>
            <option value="4">Công viên</option>
        </select>

        <button onclick="saveLocation()" class="btn btn-success">Lưu</button>
        <button onclick="cancelAdd()" class="btn btn-secondary">Hủy</button>
    </div>


    <script>
        // ====== Nhận dữ liệu từ Controller ======
        const lat = parseFloat("@lat");
        const lng = parseFloat("@lng");
        const city = "@city";
        const locations = @Html.Raw(JsonSerializer.Serialize(ViewBag.Locations));

        // ====== Ảnh lễ hội để làm nền phía sau bản đồ ======
        const festivalImages = @Html.Raw(JsonSerializer.Serialize(festivalImages));

        // Tạo lưới ảnh nền (collage) một cách hài hòa và chuyên nghiệp
        (function buildMapBackground() {
            try {
                const grid = document.getElementById('mapBgGrid');
                if (!grid || !festivalImages || festivalImages.length === 0) return;

                // Lấy danh sách ảnh giới hạn để không quá nặng UI
                const pool = [...festivalImages];
                // Trộn ngẫu nhiên nhẹ
                for (let i = pool.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [pool[i], pool[j]] = [pool[j], pool[i]];
                }

                const maxTiles = 48; // 6 x 8 tối đa
                const used = pool.slice(0, Math.min(maxTiles, pool.length));

                used.forEach((url, idx) => {
                    const tile = document.createElement('div');
                    tile.className = 'map-bg-item';
                    tile.style.backgroundImage = `url('${url}')`;
                    // Một vài tile cao gấp đôi để tạo nhịp điệu thị giác
                    if (idx % 11 === 0) {
                        tile.style.gridRow = 'span 2';
                    }
                    // Một vài tile rộng gấp đôi
                    if (idx % 13 === 0) {
                        tile.style.gridColumn = 'span 2';
                    }
                    grid.appendChild(tile);
                });

                // Thay đổi một vài tile theo thời gian để cảm giác "sống"
                let swapIndex = 0;
                setInterval(() => {
                    const items = grid.querySelectorAll('.map-bg-item');
                    if (items.length === 0 || festivalImages.length === 0) return;
                    const item = items[swapIndex % items.length];
                    const nextUrl = festivalImages[Math.floor(Math.random() * festivalImages.length)];
                    item.style.transition = 'opacity 0.8s ease';
                    item.style.opacity = '0';
                    setTimeout(() => {
                        item.style.backgroundImage = `url('${nextUrl}')`;
                        item.style.opacity = '1';
                    }, 800);
                    swapIndex++;
                }, 3000);
            } catch (e) { console.warn('Background build error:', e); }
        })();

        // ====== Khởi tạo bản đồ ======
        const map = L.map('map').setView([lat, lng], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; OpenStreetMap'
        }).addTo(map);

        // Marker trung tâm
        L.marker([lat, lng])
            .addTo(map)
            .bindPopup(`<b>${city}</b><br>Vị trí trung tâm`)
            .openPopup();


        function getIcon(type) {
            let iconUrl;
            switch (type) {
                case 1:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/139/139899.png"; // hotel
                    break;
                case 2:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/922/922699.png"; // coffee
                    break;
                case 3:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/1046/1046784.png"; // food
                    break;
                case 4:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/481/481817.png"; // park
                    break;
                default:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/252/252025.png"; // default
            }

            return L.icon({
                iconUrl: iconUrl,
                iconSize: [35, 35],
                iconAnchor: [17, 35],
                popupAnchor: [0, -30]
            });
        }

        // ====== Hiển thị tên loại ======
        function getTypeName(type) {
            switch (type) {
                case 1: return "Khách sạn 🏨";
                case 2: return "Cafe ☕";
                case 3: return "Quán ăn 🍜";
                case 4: return "Công viên 🌳";
                default: return "Khác";
            }
        }

        // ====== Hiển thị các marker từ database ======
        if (locations && locations.length > 0) {
            locations.forEach(loc => {
                const icon = getIcon(loc.Type);

                L.marker([loc.Lat, loc.Lng], { icon })
                    .addTo(map)
                    .bindPopup(`
                        <img src="${loc.MoTa}" alt="${loc.Ten}" style="width:200px;height:auto;border-radius:8px;margin-top:5px;"><br>
                        <b>${loc.Ten}</b><br>
                        <i>Loại: ${getTypeName(loc.Type)}</i>
                    `);
            });
        } else {
            console.warn("⚠️ Không có dữ liệu địa điểm trong ViewBag.Locations");
        }



        let addMode = false;
        let tempMarker = null;
        let newLat = null, newLng = null;

        function enableAddMode() {
            addMode = true;
        }

        function cancelAdd() {
            addMode = false;
            if (tempMarker) {
                map.removeLayer(tempMarker);
                tempMarker = null;
            }
            document.getElementById("addForm").style.display = "none";
        }

        map.on('click', function (e) {
            if (!addMode) return;

            newLat = e.latlng.lat;
            newLng = e.latlng.lng;

            if (tempMarker) map.removeLayer(tempMarker);

            tempMarker = L.marker([newLat, newLng]).addTo(map)
                .bindPopup("Vị trí mới được chọn").openPopup();

            document.getElementById("addForm").style.display = "block";
        });

        async function saveLocation() {
            const ten = document.getElementById("ten").value.trim();
            const loai = parseInt(document.getElementById("loai").value);
            const fileInput = document.getElementById("imageFile");
            const file = fileInput.files[0];

            if (!ten || newLat === null || newLng === null || !file) {
                alert("❗ Vui lòng nhập đầy đủ thông tin và chọn ảnh!");
                return;
            }

            // Upload ảnh lên server
            const formData = new FormData();
            formData.append("imageFile", file);

            const uploadRes = await fetch("/Map/UploadImage", {
                method: "POST",
                body: formData
            });

            if (!uploadRes.ok) {
                alert("❌ Upload ảnh thất bại!");
                return;
            }

            const result = await uploadRes.json();
            const imagePath = result.imagePath; // "/images/tên_ảnh.jpg"

            // Gửi dữ liệu thêm địa điểm
            const data = {
                Ten: ten,
                MoTa: imagePath, // <--- chính là cột hình ảnh trong database
                Type: loai,
                Lat: newLat,
                Lng: newLng
            };

            fetch('/Map/AddLocation', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(res => {
                if (res.ok) {
                    alert("✅ Thêm địa điểm thành công!");
                    location.reload();
                } else {
                    alert("❌ Lưu thất bại!");
                }
            })
            .catch(err => console.error("Lỗi:", err));
        }

    </script>
</body>
</html>
