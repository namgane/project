@{
    ViewData["Title"] = "Maps " + ViewBag.City;
    var city = ViewBag.City;
    var lat = ViewBag.Lat;
    var lng = ViewBag.Lng;
}

@using System.Text.Json

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>

    <!-- Leaflet CSS + JS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fafafa;
            text-align: center;
        }

        #map {
            width: 90%;
            height: 600px;
            margin: 30px auto;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

        .back-btn {
            background: #3949ab;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 15px;
        }

            .back-btn:hover {
                background: #1a237e;
            }
    </style>
</head>

<body>
    <h2 class="text-center mt-3">Bản đồ @city</h2>

    <div id="map"></div>

    <button class="back-btn" onclick="window.location.href='/Home/Index'">← Quay lại</button>
    <button class="back-btn" style="background:#2e7d32;" onclick="enableAddMode()">➕ Thêm địa điểm</button>

    <!-- Form nhập địa điểm -->
    <div id="addForm" style="display:none; background:#fff; padding:15px; border-radius:8px; box-shadow:0 2px 6px rgba(0,0,0,0.2);">
        <label>Tên địa điểm:</label><br>
        <input type="text" id="ten" class="form-control mb-2">

        <label>Hình ảnh:</label><br>
        <input type="file" id="imageFile" accept="image/*" class="form-control mb-2">

        <label>Loại:</label><br>
        <select id="loai" class="form-control mb-3">
            <option value="1">Khách sạn</option>
            <option value="2">Quán cà phê</option>
            <option value="3">Nhà hàng</option>
            <option value="4">Công viên</option>
        </select>

        <button onclick="saveLocation()" class="btn btn-success">Lưu</button>
        <button onclick="cancelAdd()" class="btn btn-secondary">Hủy</button>
    </div>


    <script>
        // ====== Nhận dữ liệu từ Controller ======
        const lat = parseFloat("@lat");
        const lng = parseFloat("@lng");
        const city = "@city";
        const locations = @Html.Raw(JsonSerializer.Serialize(ViewBag.Locations));

        // ====== Khởi tạo bản đồ ======
        const map = L.map('map').setView([lat, lng], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; OpenStreetMap'
        }).addTo(map);

        // Marker trung tâm
        L.marker([lat, lng])
            .addTo(map)
            .bindPopup(`<b>${city}</b><br>Vị trí trung tâm`)
            .openPopup();


        function getIcon(type) {
            let iconUrl;
            switch (type) {
                case 1:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/139/139899.png"; // hotel
                    break;
                case 2:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/922/922699.png"; // coffee
                    break;
                case 3:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/1046/1046784.png"; // food
                    break;
                case 4:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/481/481817.png"; // park
                    break;
                default:
                    iconUrl = "https://cdn-icons-png.flaticon.com/512/252/252025.png"; // default
            }

            return L.icon({
                iconUrl: iconUrl,
                iconSize: [35, 35],
                iconAnchor: [17, 35],
                popupAnchor: [0, -30]
            });
        }

        // ====== Hiển thị tên loại ======
        function getTypeName(type) {
            switch (type) {
                case 1: return "Khách sạn 🏨";
                case 2: return "Cafe ☕";
                case 3: return "Quán ăn 🍜";
                case 4: return "Công viên 🌳";
                default: return "Khác";
            }
        }

        // ====== Hiển thị các marker từ database ======
        if (locations && locations.length > 0) {
            locations.forEach(loc => {
                const icon = getIcon(loc.Type);

                L.marker([loc.Lat, loc.Lng], { icon })
                    .addTo(map)
                    .bindPopup(`
                        <img src="${loc.MoTa}" alt="${loc.Ten}" style="width:200px;height:auto;border-radius:8px;margin-top:5px;"><br>
                        <b>${loc.Ten}</b><br>
                        <i>Loại: ${getTypeName(loc.Type)}</i>
                    `);
            });
        } else {
            console.warn("⚠️ Không có dữ liệu địa điểm trong ViewBag.Locations");
        }



        let addMode = false;
        let tempMarker = null;
        let newLat = null, newLng = null;

        function enableAddMode() {
            addMode = true;
        }

        function cancelAdd() {
            addMode = false;
            if (tempMarker) {
                map.removeLayer(tempMarker);
                tempMarker = null;
            }
            document.getElementById("addForm").style.display = "none";
        }

        map.on('click', function (e) {
            if (!addMode) return;

            newLat = e.latlng.lat;
            newLng = e.latlng.lng;

            if (tempMarker) map.removeLayer(tempMarker);

            tempMarker = L.marker([newLat, newLng]).addTo(map)
                .bindPopup("Vị trí mới được chọn").openPopup();

            document.getElementById("addForm").style.display = "block";
        });

        async function saveLocation() {
            const ten = document.getElementById("ten").value.trim();
            const loai = parseInt(document.getElementById("loai").value);
            const fileInput = document.getElementById("imageFile");
            const file = fileInput.files[0];

            if (!ten || newLat === null || newLng === null || !file) {
                alert("❗ Vui lòng nhập đầy đủ thông tin và chọn ảnh!");
                return;
            }

            // Upload ảnh lên server
            const formData = new FormData();
            formData.append("imageFile", file);

            const uploadRes = await fetch("/Map/UploadImage", {
                method: "POST",
                body: formData
            });

            if (!uploadRes.ok) {
                alert("❌ Upload ảnh thất bại!");
                return;
            }

            const result = await uploadRes.json();
            const imagePath = result.imagePath; // "/images/tên_ảnh.jpg"

            // Gửi dữ liệu thêm địa điểm
            const data = {
                Ten: ten,
                MoTa: imagePath, // <--- chính là cột hình ảnh trong database
                Type: loai,
                Lat: newLat,
                Lng: newLng
            };

            fetch('/Map/AddLocation', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(res => {
                if (res.ok) {
                    alert("✅ Thêm địa điểm thành công!");
                    location.reload();
                } else {
                    alert("❌ Lưu thất bại!");
                }
            })
            .catch(err => console.error("Lỗi:", err));
        }

    </script>
</body>
</html>
