@{
    ViewData["Title"] = "Khám phá TikTok";
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary mb-3">🎵 Khám phá TikTok</h1>
        <p class="lead text-muted">Tìm kiếm video TikTok về du lịch và khám phá những điểm đến tuyệt vời</p>
    </div>

    <!-- Alert Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    
    @if (TempData["WarningMessage"] != null)
    {
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["WarningMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <!-- Search Form -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form method="post" asp-action="Index" class="d-flex gap-3">
                        <div class="flex-grow-1">
                            <input type="text" 
                                   name="keyword" 
                                   class="form-control form-control-lg" 
                                   placeholder="Nhập tên địa điểm hoặc link video TikTok..." 
                                   value="@ViewBag.Keyword"
                                   required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg px-4">
                            <i class="fas fa-search me-2"></i>Tìm kiếm
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results -->
    @if (ViewBag.Keyword != null)
    {
        <div class="row justify-content-center mb-5">
            <div class="col-lg-10">
                <div class="card shadow border-0">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">📱 Kết quả cho: "@ViewBag.Keyword"</h4>
                    </div>
                    <div class="card-body p-4">
                        @if (!string.IsNullOrEmpty(ViewBag.EmbedHtml))
                        {
                            <div class="text-center mb-3">
                                @Html.Raw(ViewBag.EmbedHtml)
                                <script async src="https://www.tiktok.com/embed.js"></script>
                            </div>
                        }
                        else
                        {
                            <div class="text-center">
                                <div class="mb-3">
                                    <i class="fas fa-external-link-alt fa-3x text-primary mb-3"></i>
                                    <h5>Xem kết quả trên TikTok</h5>
                                    <p class="text-muted">Nhấn vào nút bên dưới để mở TikTok và xem kết quả tìm kiếm</p>
                                </div>
                                <a href="@ViewBag.TikTokUrl" 
                                   target="_blank" 
                                   class="btn btn-success btn-lg">
                                    <i class="fab fa-tiktok me-2"></i>Xem trên TikTok
                                </a>
                            </div>
                        }
                        
                        <div class="mt-4 text-center">
                            <a asp-action="Result" 
                               asp-route-keyword="@ViewBag.Keyword" 
                               asp-route-searchUrl="@ViewBag.TikTokUrl"
                               class="btn btn-outline-primary">
                                <i class="fas fa-eye me-2"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Top Searches Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">🔥 Top 5 từ khóa tìm kiếm trong tháng</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopSearches != null && ((List<TravelWeb.Models.TikTokSearch>)ViewBag.TopSearches).Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var s in (List<TravelWeb.Models.TikTokSearch>)ViewBag.TopSearches)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <div>
                                        <i class="fas fa-hashtag text-primary me-2"></i>
                                        <span class="fw-bold">@s.Keyword</span>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">@s.SearchCount lượt tìm</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-search fa-2x mb-3"></i>
                            <p class="mb-0">Chưa có tìm kiếm nào trong tháng này.</p>
                            <small>Hãy bắt đầu tìm kiếm để xem thống kê!</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    .btn {
        border-radius: 10px;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
</style>
