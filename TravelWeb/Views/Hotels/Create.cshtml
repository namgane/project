@model TravelWeb.Models.Hotel
@{
    ViewData["Title"] = "Thêm Khách Sạn";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="TenKhachSan" class="form-label"></label>
        <input asp-for="TenKhachSan" class="form-control" />
        <span asp-validation-for="TenKhachSan" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DiaChi" class="form-label"></label>
        <input asp-for="DiaChi" class="form-control" />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MoTa" class="form-label"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SoPhong" class="form-label"></label>
        <input asp-for="SoPhong" type="number" class="form-control" />
        <span asp-validation-for="SoPhong" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="GiaMoiDem" class="form-label"></label>
        <input asp-for="GiaMoiDem" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="GiaMoiDem" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Hình Ảnh</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
