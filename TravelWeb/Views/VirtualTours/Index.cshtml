@model IEnumerable<TravelWeb.Models.VirtualTour>

@{
    ViewData["Title"] = "Danh sách Virtual Tour";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">+ Thêm Virtual Tour</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên địa điểm</th>
            <th>Thuộc Tour</th>
            <th>Link Street View</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LocationName</td>
                <td>@item.Tour?.DiaDiem</td>
                
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
