@model TravelWeb.Models.VirtualTour

@{
    ViewData["Title"] = "Xóa Virtual Tour";
}

<h2 class="text-danger">Xóa Virtual Tour</h2>

<h4>Bạn có chắc muốn xóa địa điểm sau không?</h4>

<div class="card mt-3 p-3">
    <h4>@Model.LocationName</h4>
    <p><strong>Thuộc tour:</strong> @Model.Tour?.DiaDiem</p>

    @if (!string.IsNullOrEmpty(Model.StreetViewLink))
    {
        <div style="width:100%; height:400px; margin-top:10px;">
            <iframe src="@Model.StreetViewLink" width="100%" height="400" style="border:0;" allowfullscreen></iframe>
        </div>
    }
    else
    {
        <p class="text-muted">Chưa có link Street View</p>
    }
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Xóa
    </button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
