@{
    ViewData["Title"] = "Câu hỏi du lịch";
    var options = ViewBag.Options as List<string>;
    var key = ViewBag.Key as string;
}

<div class="container mt-5">
    <div class="card shadow p-4 mx-auto" style="max-width:720px;">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="text-muted mb-0">Câu hỏi @ViewBag.QuestionIndex / @ViewBag.TotalQuestions</h6>
            <span class="badge bg-primary">@((int)ViewBag.QuestionIndex * 100 / (int)ViewBag.TotalQuestions)%</span>
        </div>
        <h3 class="fw-bold mb-4">@ViewBag.Question</h3>

        <form method="post" asp-action="Question">
            <input type="hidden" name="key" value="@key" />

            <div class="list-group">
                @foreach (var opt in options)
                {
                    var inputId = ($"opt_{opt}").Replace(" ", "_");
                    <label class="list-group-item d-flex align-items-center">
                        <input class="form-check-input me-2" type="radio" name="answer" value="@opt" id="@inputId" required />
                        <span class="fs-5">@opt</span>
                    </label>
                }
            </div>

            <div class="mt-4 d-flex justify-content-end">
                <button type="submit" class="btn btn-success px-4 py-2">
                    Tiếp tục →
                </button>
            </div>
        </form>

        <div class="mt-4">
            <div class="progress" style="height: 10px;">
                <div class="progress-bar" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="@((int)ViewBag.QuestionIndex * 100 / (int)ViewBag.TotalQuestions)" style="width:@((int)ViewBag.QuestionIndex * 100 / (int)ViewBag.TotalQuestions)%"></div>
            </div>
        </div>
    </div>
</div>
