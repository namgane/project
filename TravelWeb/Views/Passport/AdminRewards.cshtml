@model List<TravelWeb.Services.RewardRequest>
@{
    ViewData["Title"] = "Duyệt phần thưởng Passport";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-gift me-2"></i>Yêu cầu phần thưởng</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Về Passport</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Chưa có yêu cầu nào.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Thời gian</th>
                        <th>Người dùng</th>
                        <th>Trạng thái</th>
                        <th>Cấp mã giảm giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>@r.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@r.Username</td>
                            <td>@r.Status</td>
                            <td>
                                @if (r.Status == "Pending")
                                {
                                    <form method="post" asp-action="AssignDiscount">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@r.Id" />
                                        <div class="row g-2">
                                            <div class="col-md-3"><input name="code" class="form-control form-control-sm" placeholder="Mã" required /></div>
                                            <div class="col-md-5"><input name="description" class="form-control form-control-sm" placeholder="Mô tả ưu đãi" required /></div>
                                            <div class="col-md-3"><input type="date" name="expiresAt" class="form-control form-control-sm" value="@DateTime.UtcNow.AddMonths(1).ToString("yyyy-MM-dd")" required /></div>
                                            <div class="col-md-1 d-grid"><button class="btn btn-sm btn-primary" type="submit">Cấp</button></div>
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Đã xử lý</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


