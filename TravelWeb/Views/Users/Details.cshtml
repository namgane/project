@model TravelWeb.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Thông tin chi tiết người dùng</h2>

    <div class="card shadow">
        <div class="card-body">
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Tên đăng nhập:</strong> @Model.Username</p>
            <p><strong>Họ và tên:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Điện thoại:</strong> @Model.Phone</p>
            <p><strong>Quyền:</strong> @Model.Role</p>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
