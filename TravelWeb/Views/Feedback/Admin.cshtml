@model List<TravelWeb.Models.Feedback>
@{
    ViewData["Title"] = "Quản trị Feedback (toàn hệ thống)";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-people me-2"></i>Feedback từ người dùng</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Quay lại form</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Chưa có feedback nào.</div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Thời gian</th>
                            <th>Tên</th>
                            <th>Email</th>
                            <th>Nội dung</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fb in Model)
                        {
                            <tr>
                                <td>@fb.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@fb.Name</td>
                                <td>@fb.Email</td>
                                <td style="white-space: pre-wrap;">@fb.Message</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>


